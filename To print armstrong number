#include <stdio.h>
#include <math.h>
int main() {
    int num, original, remainder, n = 0, result = 0;
    printf("Enter a number: ");
    scanf("%d", &num);
    original = num;
    for (;original != 0; original /= 10, ++n);
    original = num;
    for (;original != 0; original /= 10) {
        remainder = original % 10;
        result += pow(remainder, n);
    }
    if (result == num) printf("%d is an Armstrong number.\n", num);
    else printf("%d is not an Armstrong number.\n", num);
    return 0;
}
